<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#C4717070">

    <RadioGroup
        android:id="@+id/radioGroupForOrders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/smallRadioButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Small" />

        <RadioButton
            android:id="@+id/meduimRadioButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Medium" />

        <RadioButton
            android:id="@+id/largeRadioButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Large" />

    </RadioGroup>

    <CheckBox
        android:id="@+id/checkbox_extra_sauce"
        android:layout_width="219dp"
        android:layout_height="58dp"
        android:text="Extra Sauce" />

    <CheckBox
        android:id="@+id/checkbox_extra_cheese"
        android:layout_width="219dp"
        android:layout_height="70dp"
        android:text="Extra Cheese" />

    <CheckBox
        android:id="@+id/checkbox_mix_with_beef"
        android:layout_width="223dp"
        android:layout_height="68dp"
        android:text="Mix with Beef" />

    <TextView
        android:id="@+id/text_add_note"
        android:layout_width="377dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="Add Note to Menu Item (Optional)"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_text_note"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:layout_marginTop="8dp"
        android:hint="Enter your note here"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Cancel"
            />

        <Button
            android:id="@+id/button_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            />
    </LinearLayout>
</LinearLayout>
