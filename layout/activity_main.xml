<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/start_background">


    <TextView
        android:id="@+id/about_restorantTxt"
        style="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="100dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="10dp"
        android:fontFamily="sans-serif-medium"
        android:foregroundGravity="center"
        android:gravity="center"
        android:lineSpacingExtra="10sp"
        android:paddingVertical="10dp"
        android:text="Pizza Hub"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#B8B5B5"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100dp"
        android:text="Expolre a world of delicious pizzas, crrafted with \n fresh ingredients and love"
        android:textAlignment="center"
        android:textColor="#717070"
        tools:text="Expolre a world of delicious pizzas, crrafted with \n fresh ingredients and love" />

    <Button
        android:id="@+id/get_startButton"
        android:layout_width="218dp"
        android:layout_height="55dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="400dp"
        android:backgroundTint="#C477120B"
        android:fontFamily="sans-serif"
        android:text="Get Start"
        android:textColor="#000000"
        android:textSize="25sp" />
</LinearLayout>