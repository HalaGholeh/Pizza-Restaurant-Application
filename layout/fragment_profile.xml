<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/user1" />

    <Button
        android:id="@+id/change_profile_picture_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#C477120B"
        android:text="Change picture" />

    <TextView
        android:id="@+id/email_update_profile"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#717070"
        android:textSize="18sp"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/phoneNumber_update_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#717070"
        android:minHeight="48dp"
        android:ems="10"
        android:hint="Enter your Phone Number"
        android:inputType="text"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/firstName_update_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#717070"
        android:minHeight="48dp"
        android:ems="10"
        android:hint="Enter your First Name"
        android:inputType="text"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/lastName_update_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#717070"
        android:minHeight="48dp"
        android:ems="10"
        android:hint="Enter your Last Name"
        android:inputType="text"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:textColor="#717070"
        android:textSize="18sp"
        android:text="Update Password"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/current_password_update_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#717070"
        android:minHeight="48dp"
        android:ems="10"
        android:hint="Enter your current password "
        android:inputType="textPassword"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/new_password_update_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#717070"
        android:minHeight="48dp"
        android:ems="10"
        android:hint="Enter new password "
        android:inputType="textPassword"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/confirm_new_password_update_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="#717070"
        android:minHeight="48dp"
        android:ems="10"
        android:hint="Confirm the new password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"/>

    <Button
        android:id="@+id/update_profile_clicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#C477120B"
        android:text="Update Profile" />
</LinearLayout>